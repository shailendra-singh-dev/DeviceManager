<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".UnlockActivity">

    <TextView android:text="@string/unlock_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="25sp"
        android:gravity="center_vertical|center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/logInSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone">

            <TextView
                android:text="INSERT YOUR E-MAIL"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="25sp"
                android:gravity="center_vertical|center_horizontal"/>

            <EditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:hint="@string/prompt_account_email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true" />

            <TextView
                android:text="INSERT YOUR PASS"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="25sp"
                android:gravity="center_vertical|center_horizontal"/>

            <EditText
                android:id="@+id/passField"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:hint="@string/prompt_account_password"
                android:inputType="textVisiblePassword"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/unlockButton"
                android:text="@string/unlock_button"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:textSize="25sp"
                android:gravity="center_vertical|center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/unlockSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone">

            <TextView android:id="@+id/userNameLabel"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:gravity="center_vertical|center_horizontal"/>

            <Button
                android:id="@+id/yesIAm"
                android:text="YES I'AM"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:gravity="center_vertical|center_horizontal"/>

            <Button
                android:id="@+id/noImNot"
                android:text="NO I'M NOT"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:gravity="center_vertical|center_horizontal"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
